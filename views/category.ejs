<style>
    body {
        font-family: 'Nunito', sans-serif;
        margin: 0px;
        padding: 0px;
    }

    .flex-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .two {
        background-color: #ffffff;
        width: 330px;
        height: 250px;
        margin: 20px 20px;
        text-align: center;
        line-height: 75px;
        font-size: 30px;
        border: 1px solid black;
        border-radius: 5px;
        box-shadow: 4px 4px 4px lightgray;
    }

    img {
        height: 90px;
        width: 90px;
        background-color: black;
