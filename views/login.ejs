  <link rel="stylesheet" type="text/css" href="/css/loginStyles.css">
  <%# FontAwesome  %>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css" integrity="sha384-Bfad6CLCknfcloXFOyFnlgtENryhrpZCe29RTifKEixXQZ38WheV+i/6YWSzkz3V" crossorigin="anonymous">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css" integrity="sha384-Bfad6CLCknfcloXFOyFnlgtENryhrpZCe29RTifKEixXQZ38WheV+i/6YWSzkz3V" crossorigin="anonymous">
  <!-- JS, Popper.js, and jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Piedra">
  <style media="screen">
    .icon {
      height: 50px;
      width: 50px;
      padding: 10px;
    }

    .iconbig {
      height: 700px;
      width: 700px;
      padding: 100px;
    }

    .iconavg {
      height: 130px;
      width: 80px;
      padding: 10px;
      margin-bottom: 50px;
      margin-right: 15px;
    }
  </style>
</head>

<body style="background-color:black;">
  <div style="padding:3%;">
    <div class="card" style="border-radius: 40px">
      <div class="card-body" style="height: 42rem;">
        <div class="row">
          <div class="col-5">
            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>
            <div class="">
              <img src="images/Bech Daal Logo.png" class="iconavg" alt="">
              <span class="title">BECH DAAL</span>
            </div>
            <div style="padding-left:2.5rem;">

              <div id="card-left" style="width: 372px;">
                <div class="iconContainer">
                  <p style="padding-left:0.5rem;padding-right:1rem;padding-top:1rem"><i class="fa fa-envelope" aria-hidden="true"></i>
                  </p>
                </div>
                <div class="inputContainer" style="width:70%">
                  <label class="text-muted">Enter Email/Mobile No.</label>
                  <br />
                  <input class="input i-email" name="email" placeholder="Type Here" required pattern="^(([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)|\d{10})$">
                </div>
                <div class="checkboxCont">
                  <i class="fas fa-check-circle mail-check" style="margin-left: 30px; visibility: hidden"></i>
                </div>
              </div>
              <div id="card-left" style="width: 372px;">
                <div class=" iconContainer">
                  <p style="padding-left:0.5rem;padding-right:1rem;padding-top:1rem"><i class="fa fa-key" aria-hidden="true"></i>
                  </p>
                </div>
                <div class="inputContainer" style="width:70%">
                  <label class="text-muted">Enter Password</label>
                  <br />
                  <input class="input" type="password" name="password" id="password" placeholder="Type Here" required pattern='^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9])(?=.*?[#?!@$%^&*-]).{8,32}$'>
                </div>
                <div class="checkboxCont">

                  <i class="fas fa-eye" id="togglePass" style="margin-left: 30px;"></i>

                </div>
              </div>
            </div>
            <div style="display:inline-flex">
              <input class="checkbox" type="checkbox" style="margin-left:3rem;margin-top:1.2rem">
              <p style="font-size:15px;padding-left:1rem;margin-top:1rem">Remember Me</p>
              <a href="/forgot">
                <p style="font-size:15px;padding-left:7rem;margin-top:1rem">Forgot Password?</p>
              </a>
            </div>
            <div style="display:inline-flex">
              <div class="card3">
                <a href="/"><button type="submit" id="signupBtn">Login</button></a>
              </div>
              <div class="card3">
                <a href="/signup"><button id="signupBtn" style="background-color: #fa744f">Create Account</button></a>
              </div>
            </div>
            <div style="padding-left:2.5rem">
              <p style="font-size:15px;">Or you can Join with</p>
              <div class="card4">
                <div class="imgContainer" style="flex-direction: row;">
                  <a href="#"><img class="icon" src="/images/search.png" alt="img1" /></a>
                  <a href="#"><img class="icon" src="/images/facebook.png" alt="img2" /></a>
                  <a href="#"><img class="icon" src="/images/twitter.png" alt="img3" /></a>
                </div>
              </div>
            </div>
          </div>
          <div class="col-7">

            <!-- <div class="row no-gutters Navbar">
              <div class="col-3">
                <a href="#" style="color: grey">HOME</a>
              </div>
              <div class="col-3">
                <a href="#" style="color: grey">OUR TEAM</a>
              </div>
              <div class="col-3">
                <a href="#" style="color: grey">ABOUT US</a>
              </div>
              <div class="col-3">
                <a href="#" style="color: grey">CONTACT</a>
              </div>
            </div> -->

            <img src="/images/Group 737.png" style="margin: 10% auto;display:block;" alt="">

          </div>
        </div>
      </div>
    </div>
  </div>
</body>

<%-include('partials/footer')-%>
