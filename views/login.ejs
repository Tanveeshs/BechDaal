<%-include('partials/miniheader')-%>


<head>
  <!-- <link rel="stylesheet" type="text/css"
    href="https://storage.googleapis.com/bechdaal_bucket/assets/css/loginStyles.css"> -->
  <link rel="stylesheet" type="text/css" href="css/loginStyles.css">
  <title>Login</title>
</head>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
  integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>

<div class="row col-sm-12">
  <div class="col-sm-12 col-md-5 footer-details">
    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <div style="padding-top:100px">

    </div>
    <div style="padding-left:2.5rem;">
      <h1 class="text-left p-2 text-muted">LOGIN</h1>
      <form action="/login" method="POST">
        <div id="card-left" style="width: 372px;">
          <div class="iconContainer">
            <p style="padding-left:0.5rem;padding-right:1rem;padding-top:1rem"><i class="fa fa-envelope"
                aria-hidden="true"></i>
            </p>
          </div>
          <div class="inputContainer" style="width:70%">
            <label class="text-muted">Enter Email</label>
            <br />
            <input class="input i-email" name="email" placeholder="Type Here" required
              pattern="^(([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)|\d{10})$">
          </div>
          <div class="checkboxCont">
            <i class="fas fa-check-circle mail-check" style="margin-left: 30px; visibility: hidden"></i>
          </div>
        </div>
        <div id="card-left" style="width: 372px;margin-top: 4%;">
          <div class=" iconContainer">
            <p style="padding-left:0.5rem;padding-right:1rem;padding-top:1rem"><i class="fa fa-key"
                aria-hidden="true"></i>
            </p>
          </div>
          <div class="inputContainer" style="width:70%">
            <label class="text-muted">Enter Password</label>
            <br />
            <input class="input" type="password" name="password" id="password" placeholder="Type Here">
          </div>
          <div class="checkboxCont">
            <i class="fas fa-eye" id="togglePass" style="margin-left: 30px;"></i>
          </div>
        </div>
    </div>
    <div style="display:inline-flex">
      <a href="/forgot/forgotpassword">
        <p style="font-size:15px;padding-left:16rem;margin-top:1rem">Forgot Password?</p>
      </a>
    </div>
    <div style="display:flex;flex-direction: column;width:100%;text-align: center;">
      <div class="card3">
        <button type="submit" id="loginBtn">Login</button>
      </div>
      </form>
      <div class="card3">
        <a href="/signup"><button id="signupBtn" style="background-color: #fa744f">Create
            Account</button></a>
      </div>
    </div>
    <div style="padding-left:2.5rem">
      <p style="font-size:15px;">Or you can Join with</p>
      <div class="card4">
        <div class="imgContainer" style="flex-direction: row;">
          <a href="/auth/google"><img class="icon"
              src="https://storage.googleapis.com/bechdaal_bucket/assets/images/search.png" alt="img1" /></a>
          <a href="/auth/facebook"><img class="icon"
              src="https://storage.googleapis.com/bechdaal_bucket/assets/images/facebook.png" alt="img2" /></a>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-12 col-md-7 footer-details">
    <img class="iconbig" src="https://storage.googleapis.com/bechdaal_bucket/assets/images/Group%20737.png" style=""
      alt="">

  </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"
  integrity="sha512-3P8rXCuGJdNZOnUx/03c1jOTnMn3rP63nBip5gOP2qmUh5YAdVAvFZ1E+QLZZbC1rtMrQb+mah3AfYW11RUrWA=="
  crossorigin="anonymous"></script>


<script src="https://storage.googleapis.com/bechdaal_bucket/assets/js/login.js" charset="utf-8"></script>
<%-include('partials/footer')-%>