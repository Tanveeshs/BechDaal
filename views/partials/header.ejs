      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto" id="ulLinks">
        <li id="toggledown">
          <!-- <input type="text" placeholder="Search" style="width:300px;" id="menuSearch" /> -->
          <i class="fa fa-search searchicon" aria-hidden="true"></i>
        </li>
        <li class="nav-item">
          <a class="nav-link look" style="color:black;" href="/login">Login/<span>SignUp</span></a>
        </li>
        <div class="nav-item dropdown">
          <a class="nav-link " href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
            id="hellouser">
            <i class="fas languageicon fa-language"></i>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="#">Hindi</a>
            <a class="dropdown-item" href="#">English</a>
          </div>
        </div>
        <li class="nav-item active" style="display: flex; cursor:pointer;" id="sellOption">
          <a><i class="fas sellicon fa-hand-holding-usd"></i></a>
          <a href="/post" class="nav-link look" style="color:black; font-weight: bold;">Sell</a>
        </li>

      </ul>
    </div>
  </nav>
  <section id="search">
    <nav class="searchbar">
      <ul class="searchbar-items">
        <li class="listpadding">
          <p class="a">Want something?</p>
        </li>
        <li class="listpadding">
          <input class="input1" type="text" placeholder="Type Here" />
        </li>
        <li class="listpadding">
          <p class="b">In?</p>
        </li>
        <li>

          <input class="input2" type="text" placeholder="Your location" />
        </li>
        <li class="listpadding">
          <button class="locationsubmit">Go!</button>
        </li>
      </ul>
    </nav>
  </section>

