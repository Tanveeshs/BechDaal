<form method="post" action="/sell/" enctype="multipart/form-data">
  <center>
    <h2 class="display-4">Post An Ad</h2>
  </center>
  <div class="container ">
    <div class="row">
      <div class="col-md-6">
        <!--        Title-->
        <div class="form-group" style="margin-top: 30px">
          <label for="title">Title</label>
          <input class="form-control col-lg-8" placeholder="Max 30 Characters" name="title" maxlength="30" required />
        </div>
        <!--Cat Sub Cat-->
        <div class="row">
          <div class="form-group col-md-6">
            <label>Category</label>
            <select id="category" class="form-control col-lg-11" name="category" required>
              <option value="none">-------------</option>
            </select>
          </div>
          <div class="form-group col-md-6">
            <label>Subcategory</label>
            <select class="form-control col-lg-11" name="subcategory" id="subcategory" >
            </select>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-6">
            <label for="model">Quantity</label>
            <input type="text" class="form-control col-lg-11" type="text" name="model" placeholder="1kg,1pc,1lt" required/>
          </div>
          <div class="form-group col-md-6">
            <label for="price">Price</label>
            <input class="form-control col-lg-11" type="text" name="price" placeholder="In Rupees" required/>
          </div>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control col-lg-12" name="description" style="resize: none;" rows="5" placeholder="Please Describe your product" required></textarea>
        </div>
        <div class="form-group">
          <label for="selectpicker">Deliverable Areas</label><br>
          <select class="selectpicker form-control col-md-8" id="mul-select" multiple data-actions-box="true" data-live-search="true" data-width="500px" name="delivery">
          </select>
        </div>
        <br>
        <div class="form-group">
          <input type="checkbox" name="featured" value="Featured">
          <label for="featured" class="form-check-label">Featured</label>
        </div>
      </div>
      <div class="col-md-6 m-auto">
        <center>
          <img id="cover-pic" src="" alt="" style="width:300px;height:300px;">
          <p style="padding: 10px">
            Cover Pic
          </p>
        </center>
      </div>
    </div>
