<%-include("partials/header")-%>

<!-- views/signup.ejs -->



<head>
  <title>Node Authentication</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <!-- load bootstrap css -->
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <!-- load fontawesome -->
  <link rel="stylesheet" type="text/css" href="/css/signupStyles.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Piedra">
  <style>
    .icon {
      height: 50px;
      width: 50px;
      padding: 10px;
    }

    .iconbig {
      height: 700px;
      width: 700px;
      padding: 100px;
    }

    .iconavg {
      height: 130px;
      width: 80px;
      padding: 10px;
      margin-bottom: 50px;
      margin-right: 15px;
    }

    .title {
      font-size: 45px;
      color: rgb(233, 57, 57);
      font-family: Piedra;
    }

    nav-item {
      font-family: Piedra;
      font-size: 30px;
      padding: 15px;
      margin: 15px;
    }
  </style>
</head>

<body>
  <div id="container">
    <div class="container" id="subcontainer-1">
      <%# <nav>
        <nav-item>Home</nav-item>
        <nav-item>Our Team</nav-item>
        <nav-item>About Us</nav-item>
        <nav-item>Contact</nav-item>
      </nav> %>
      <img class="iconbig" src="/images/3.png" alt="img1" />
    </div>
    <div class="container" id="subcontainer-2">
      <div>
        <img class="iconavg" src="/images/Bech Daal Logo.png" alt="img1" /> <span class="title">BECH DAAL</span>
      </div>
      <div class="card">
        <div class="iconContainer">
          <p><i class="fa fa-user" aria-hidden="true"></i></p>
        </div>
        <div class="inputContainer" style="width:70%">
          <label class="text-muted">Enter Username</label>
          <br />
          <input class="input i-name" type="text" name="username" placeholder="Type Here" required pattern='^[_A-z0-9]+((-|\s)*[_A-z0-9])*$'>
        </div>
        <div class="checkboxCont">
          <i class="fas fa-check-circle name-check" style="margin-left: 30px; visibility: hidden"></i>
        </div>
      </div>
      <div class="card">
        <div class="iconContainer">
          <p><i class="fa fa-envelope" aria-hidden="true"></i>
          </p>
        </div>
        <div class="inputContainer" style="width:70%">
          <label class="text-muted">Enter Email/Mobile No.</label>
          <br />
          <input class="input i-email" name="email" placeholder="Type Here" required pattern="^(([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)|\d{10})$">
        </div>
        <div class="checkboxCont">
          <i class="fas fa-check-circle mail-check" style="margin-left: 30px; visibility: hidden"></i>
        </div>
      </div>
      <div class="card">
        <div class="iconContainer">
          <p><i class="fa fa-key" aria-hidden="true"></i>
          </p>
        </div>
        <div class="inputContainer" style="width:70%">
          <label class="text-muted">Set a Password</label>
          <br />
          <input class="input" type="password" name="password" id="password" placeholder="Type Here" required pattern='^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9])(?=.*?[#?!@$%^&*-]).{8,32}$'>
        </div>
        <div class="checkboxCont">
          <i class="fas fa-eye" id="togglePass" style="margin-left: 30px;"></i>
        </div>
      </div>
      <div class="card2">
        <a id="haveAccount" href="/login">Already have an account</a>
      </div>
      <div class="card3">
        <a href="/login"><button id="signupBtn">Sign Up</button></a>
      </div>
    </div>
  </div>
</body>


<%-include("partials/footer")-%>
