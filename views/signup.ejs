          <form action="/signup" method="post" class="signupForm">
            <div class="card">
              <div class="iconContainer">
                <p><i class="fa fa-user" aria-hidden="true"></i></p>
              </div>
              <div class="inputContainer" style="width:70%">
                <label class="text-muted">Enter Username</label>
                <br />
                <input class="input i-name" type="text" id="username_ipt" name="username" placeholder="Type Here" minlength="5" required pattern='^[a-zA-Z0-9]+([_-]?[a-zA-Z0-9])*$'>
              </div>
              <div class="checkboxCont">
                <i class="fas fa-check-circle name-check" style="margin-left: 30px; visibility: hidden"></i>
              </div>
            </div>
            <div class="text-muted" style="text-align: left; font-size:12px">
              Username should contain:
              <ul>
                <li>Minimum 5 characters</li>
                <li>No special characters other than - and _ , which should be again followed by text</li>
              </ul>
            </div>
            <div class="card">
              <div class="iconContainer">
                <p><i class="fa fa-envelope" aria-hidden="true"></i>
                </p>
              </div>
              <div class="inputContainer" style="width:70%">
                <label class="text-muted">Enter Email/Mobile No.</label>
                <br />
                <input class="input i-email" id="email_ipt" name="email" placeholder="Type Here" required pattern="^(([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)|\d{10})$">
              </div>
              <div class="checkboxCont">
                <i class="fas fa-check-circle mail-check" style="margin-left: 30px; visibility: hidden"></i>
              </div>
            </div>
            <div class="card">
              <div class="iconContainer">
                <p><i class="fa fa-key" aria-hidden="true"></i>
                </p>
              </div>
              <div class="inputContainer" style="width:70%">
                <label class="text-muted">Set a Password</label>
                <br />
                <input class="input" type="password" name="password" id="password" placeholder="Type Here">
              </div>
              <div class="checkboxCont">
                <i class="fas fa-eye" id="togglePass" style="margin-left: 30px;"></i>
              </div>
            </div>
            <div class="text-muted" style="text-align: left; font-size:12px">
              Password should contain:
              <ul>
                <li>Minimum 6 characters</li>
                <li>One Uppercase letter</li>
                <li>One Lowercase letter</li>
                <li>One digit</li>
                <li>One Special symbol</li>
              </ul>

            </div>
            <div class="card2">
              <a id="haveAccount" href="/login">Already have an account</a>
            </div>
            <div class="card3">
              <button id="signupBtn" class="signupBtn" type="submit">Sign Up</button>
            </div>
