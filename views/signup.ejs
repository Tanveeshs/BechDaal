<%-include('partials/miniheader')-%>
<head>
  <title>Register</title>
</head>


<link rel="stylesheet" type="text/css" href="/css/signupStyles.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Piedra">
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous" ></script>

<div id="container">
  <div class="row col-sm-12">
    <div class="container" id="subcontainer-1">
      <img class="iconbig" src="/images/3.png" alt="img1" />
    </div>
    <div class="container col text-center" id="subcontainer-2">
      <h1 class="text-left p-2 text-muted">REGISTER</h1>
      <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
      <% } %>
      <form action="/signup" method="post" class="signupForm">
        <div class="card">

          <div class="inputContainer" style="width:70%">
            <label class="text-muted">You are a ?</label>
            <br />
            <div style="padding-left: 20px; ">
              <input  type="radio" id="Seller" name="Person" value="Seller" checked onchange="onSellerClick()">
              <label for="Seller" >Seller</label><br>
              <input type="radio" id="User" name="Person" value="User" onchange="onUserClick()">
              <label for="User">User</label><br>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="iconContainer">
            <p><i class="fa fa-user" aria-hidden="true"></i></p>
          </div>
          <div class="inputContainer" style="width:70%">
            <label class="text-muted">Enter Username</label>
            <br />
            <input class="input i-name" type="text" id="username_ipt" name="username" placeholder="Type Here" minlength="5" required pattern='^[a-zA-Z0-9]+([_-]?[a-zA-Z0-9])*$'
                   data-toggle="tooltip" data-placement="bottom" data-html="true"  title="Username should contain:
Minimum 5 characters
No special characters other than - and _">
          </div>
          <div class="checkboxCont">
            <i class="fas fa-check-circle name-check" style="margin-left: 30px; visibility: hidden"></i>
          </div>
        </div>
        <div class="card">
          <div class="iconContainer">
            <p><i class="fa fa-envelope" aria-hidden="true"></i>
            </p>
          </div>
          <div class="inputContainer" style="width:70%">
            <label class="text-muted">Enter Email</label>
            <br />
            <input class="input i-email" id="email_ipt" name="email" placeholder="Type Here" required pattern="^(([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)|\d{10})$">
          </div>
          <div class="checkboxCont">
            <i class="fas fa-check-circle mail-check" style="margin-left: 30px; visibility: hidden"></i>
          </div>
        </div>
        <div class="card">
          <div class="iconContainer">
            <p><i class="fa fa-key" aria-hidden="true"></i>
            </p>
          </div>
          <div class="inputContainer" style="width:70%">
            <label class="text-muted">Set a Password</label>
            <br />
            <input class="input" type="password" name="password" id="password1" placeholder="Type Here" required pattern='^(?=.*?[A-Z])(?=.*?[a-z]).{6,32}$'
                   data-toggle="tooltip" data-placement="bottom" data-html="true"  title="Password should contain:
Minimum 6 characters
One Uppercase Letter
One Lowercase Letter
One Digit">
          </div>
          <div class="checkboxCont">
            <i class="fas fa-eye" id="togglePass" style="margin-left: 30px;"></i>
          </div>
        </div>
        <div class="row">
          <div class="col-md-5 desc" style="padding-left:20px;">
              <i id="6char" class="fas fa-times" style="color:#FF0004;"></i><span>   6 Characters</span><br>
              <i id="lcase" class="fas fa-times" style="color:#FF0004;"></i><span>   One Lowercase</span>
          </div>
          <div class="col-md-6 desc">
             <i id="ucase" class="fas fa-times" style="color:#FF0004;"></i><span>  One Uppercase</span><br>
             <i id="num" class="fas fa-times" style="color:#FF0004;"></i><span>   One Number</span>
          </div>
        </div>
        <div class="card">
          <div class="iconContainer">
            <p><i class="fa fa-key" aria-hidden="true"></i>
            </p>
          </div>
          <div class="inputContainer" style="width:70%">
            <label class="text-muted">Re-enter Password</label>
            <br />
            <input class="input" type="password" id="password2" placeholder="Type Here">
          </div>
          <div class="checkboxCont">
            <i class="fas fa-check-circle pass-check" style="margin-left: 30px; visibility: hidden"></i>
          </div>
        </div>
        <div class="text-muted text-center" style="text-align: left; font-size:12px" id="MobileNumber">
          <div id='mobile' class="card" >
            <div class="iconContainer">
              <p> <i class="fa fa-2x fa-mobile" style="color: black;" aria-hidden="true"></i>
              </p>
            </div>
            <div class="inputContainer" style="width:70%">
              <label class="text-muted" style="padding-top: 10px;">Mobile Number</label>
              <br />
              <input type="tel" id="phone" name="phone" required pattern="^\d{10}$">
            </div>
            <div class="checkboxCont">
              <i class="fas fa-check-circle ph-check" style="margin-left: 30px; visibility: hidden; color:black; font-size:15px;"></i>
            </div>
          </div>
        </div>
        <div class="card2">
          <a id="haveAccount" href="/login">Already have an account</a>
        </div>
        <div class="card3">
          <button id="signupBtn" class="signupBtn centerKarde" type="submit" >Sign Up</button>
        </div>
      </form>
    </div>
  </div>
</div>


<script src="/js/signup1.js">

</script>
